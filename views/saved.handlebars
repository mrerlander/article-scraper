<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card-panel teal">
                <span class="center">
                    <h4>Click the
                        <em>Scrape New Articles</em> button to get new articles.</h4>
                    <p>Once articles are scraped, you can read
                        <i class="material-icons">subject</i>, save
                        <i class="material-icons">cloud</i>, view comments
                        <i class="material-icons">comment</i>, and add comments of your own
                        <i class="material-icons">mode_edit</i>
                    </p>
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div id="articles">
                    {{#articles}}
                    {{#if saved}}
                    <div class="col s12 m6 xl4">
                        <div class="card large teal">
                            <div class="card-image">
                                <img src={{img}}>
                                <a class="btn-floating halfway-fab waves-effect modal-trigger waves-light red modal-open" data-id="{{_id}}" href="#comment-modal">
                                    <i class="large material-icons">mode_edit</i>
                                </a>
                            </div>
                            <div class="card-content center">
                                <h5>{{title}}</h5>
                                <h6>{{byline}}</h6>
                                <p>{{time}}</p>
                            </div>
                            <div class="card-action center">
                                <a href="{{link}}">
                                    <i class="material-icons">subject</i>
                                </a>                                
                                <a class="save" data-id="{{_id}}" data-saved="{{saved}}" href="/">
                                    <i class="material-icons">cloud_done</i>
                                </a>
                                <a class="comment card-title activator" data-id="{{_id}}">
                                    <i class="material-icons">comment</i>
                                </a>
                            </div>
                            <div class="card-reveal">
                                <span class="card-title grey-text text-darken-4">Comments
                                    <i class="material-icons right">close</i>
                                </span>
                                {{#comments}}
                                <div>
                                    <p class="card-com black-text">{{this}}
                                        <button class="btn right waves-effect waves-light red del-comment" data-id="{{../_id}}">
                                            <i class="material-icons">close</i>
                                        </button>
                                    </p>
                                </div>
                                {{/comments}}
                            </div>
                        </div>
                    </div>
                    {{/if}}
                    {{/articles}}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="comment-modal">
    <div>
        <form id="comment-form">
            <div class="input-field col s12">
                <textarea id="comment" class="materialize-textarea"></textarea>
                <label for="comment">Type Comment Here</label>
            </div>
            <button type="submit" class="waves-effect waves-light modal-close btn add-comment" name="action">Comment</button>
        </form>
    </div>
    <div class="modal-footer">
        <a class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
</div>